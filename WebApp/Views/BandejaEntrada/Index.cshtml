@model IEnumerable<Entidades.Bandejas.BandejaEntrada>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Listado de Estados</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">                
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>                            
                            <th>
                                @Html.DisplayNameFor(model => model.CodigoProceso)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TipoCorrespondencia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </th>                           
                            <th>
                                @Html.DisplayNameFor(model => model.UsuarioOrigen)
                            </th>                            
                            <th>
                                @Html.DisplayNameFor(model => model.UsuarioResponsable)
                            </th>                            
                            <th>
                                @Html.DisplayNameFor(model => model.Departamento)
                            </th>                            
                            <th>
                                @Html.DisplayNameFor(model => model.FechaCreacion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaCaduca)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EstadoProceso)
                            </th>  
                            <th>
                                @Html.DisplayNameFor(model => model.Detalle)
                            </th>                          
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdProceso)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CodigoProceso)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TipoCorrespondencia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdUsuarioOrigen)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UsuarioOrigen)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdUsuarioResponsable)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UsuarioResponsable)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdDepartamento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Departamento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Detalle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaCreacion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaCaduca)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EstadoProceso)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BandejaSalidaOrigen)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BandejaEntradaDestino)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ConfirmacionLecturaDestino)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EnviaDocumento)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Estado)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit","Proceso", new { id = item.IdProceso })" class="btn btn-primary"><span class="glyphicon glyphicon-edit"></span></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
