@model IEnumerable<Entidades.Proceso.Proceso>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Listado de Procesos</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <p>
                    <a href="@Url.Action("Create", "Proceso")" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Nuevo Proceso</a>
                </p>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>                            
                            <th>
                                @Html.DisplayNameFor(model => model.CodigoProceso)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TipoCorrespondencia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IdUsuarioOrigen)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IdUsuarioResponsable)
                            </th>                                                       
                            <th>
                                @Html.DisplayNameFor(model => model.__Detalle)
                            </th>
                            <td>
                                @Html.DisplayNameFor(model => model.EnviaDocumento)
                            </td> 
                            <th>
                                @Html.DisplayNameFor(model => model.FechaCaduca)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EstadoProceso)
                            </th>                           
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CodigoProceso)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TipoCorrespondencia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdUsuarioOrigen)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdUsuarioResponsable)
                                </td>                                   
                                <td>
                                    @Html.DisplayFor(modelItem => item.__Detalle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaCaduca)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EstadoProceso)
                                </td>                               
                                <td>
                                    @Html.DisplayFor(modelItem => item.EnviaDocumento)
                                </td>                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.Estado)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit","Proceso", new { id = item.IdProceso })" class="btn btn-primary"><span class="glyphicon glyphicon-edit"></span></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>